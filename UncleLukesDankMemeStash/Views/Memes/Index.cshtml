@model IEnumerable<TileViewModel>

@{
    ViewData["Title"] = "Memy";
}

<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/BrowseEnter.js"></script>
    <link rel="stylesheet" src="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" src="~/css/site.css" />
</head>

<div class="navbar container-fluid d-flex">
    <div class="col-6 col-lg-8 col-xl-8 text-right text-white">Szukaj po nazwie</div>
    <div class="col-6 col-lg-4 col-xl-4">
        <form method="get" asp-action="Search">
            <input name="query" id="query" type="text" />
            <input type="submit" value="Szukaj" />
        </form>
    </div>
</div>

<h1 class="text-white">Przeglądanie memów</h1>

<div class="row">
    @foreach (var tileViewModel in Model)
    {
         @await Html.PartialAsync("_Tile", tileViewModel);
    }
    <div class="col-5 col-sm-3 col-lg-2 gallery-item fade-in">
        <a class="text-decoration-none" asp-action="Create">
            <img class="img-responsive" style="object-fit:scale-down; width: 90%" src="~/add.svg" />
        </a>
    </div>
</div>
