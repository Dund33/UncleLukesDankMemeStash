@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Meme

@{
    ViewData["Title"] = Localizer["Delete"];
}

<h1 class="text-white">@Localizer["Delete"]</h1>

<h3 class="text-white">@Localizer["Are you sure?"]</h3>
<div class="text-white">
    <h4 class="text-white">Meme</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger rounded" /> |
        <a asp-action="Index" class="link-padding rounded">@Localizer["Go back to the list"]</a>
    </form>
</div>