@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Meme

@{
    ViewData["Title"] = Localizer["Details"];
}

<h1>@Localizer["Details"]</h1>

<div class="text-white">
    <div class="row">
        <img class="img-fluid rounded-lg col-10" src="@Model.ImageURL" alt="@Model.Title"/>
        <h4 class="col-2">@Html.DisplayFor(model => model.Title)</h4>
    </div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>
</div>
<div class="text-white">
    <a asp-action="Edit" asp-route-id="@Model.ID">@Localizer["Edit"]</a>
    |
    <a asp-action="Index">@Localizer["Go back to the list"]</a>
</div>