@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model LoginModel
@{
    ViewData["Title"] = Localizer["Log in"];
}
<head>
    <link rel="stylesheet" src="css/site.css" />
</head>

<body class="text-white">
    <h1>Login</h1>
    <form asp-action="Login">
        <div class="form-group">
            <label asp-for="UserName">@Localizer["Username"]</label>
            <input asp-for="UserName" class="form-control" placeholder="login" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">@Localizer["Password"]</label>
            <input asp-for="Password" class="form-control" placeholder="hasło" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-light" value="@Localizer["Log in"]" />

        @if (ViewBag.ErrorMessage != null)
        {
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        }
    </form>
</body>